<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SE_suggested_item_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_bg"
    android:padding="15dp"
    android:orientation="horizontal"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:padding="@dimen/global_three_dp"
            android:text="dd"
            android:textAllCaps="true"
            android:maxLines="2"
            android:textColor="@color/text_grey_color"
            android:textSize="@dimen/global_fifteen_sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/dept_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/global_three_dp"
                android:textAllCaps="true"
                android:text="DOPT"
                android:textColor="@color/text_grey_color"
                android:textSize="@dimen/global_fifteen_sp" />
            <TextView
                android:id="@+id/time_txt"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/global_three_dp"
                android:singleLine="true"
                android:text="1 hour ago"
                android:background="@drawable/time_bg"
                android:textColor="@color/text_grey_color"
                android:textSize="@dimen/global_fifteen_sp" />
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_go"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:padding="6dp"/>
</LinearLayout>